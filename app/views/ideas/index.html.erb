<h1>Listing ideas</h1>
<!-- will give you a grid of images: -->

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <!-- compact removes empty things in the array, i.e. nils -->
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <%= image_tag idea.picture_url(:thumb) if idea.picture.present? %>
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>
